APP_NAME="Tinder App API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Database - PostgreSQL for Railway production
DB_CONNECTION=pgsql
DB_HOST=shortline.proxy.rlwy.net
DB_PORT=49590
DB_DATABASE=railway
DB_USERNAME=postgres
DB_PASSWORD=your-postgres-password

# Mail Configuration - Brevo SMTP
MAIL_MAILER=smtp
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=your-brevo-smtp-username
MAIL_PASSWORD=your-brevo-smtp-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-verified-sender@email.com
MAIL_FROM_NAME="${APP_NAME}"

# Admin Configuration
ADMIN_EMAIL=admin@example.com

# Brevo API Key
BREVO_API_KEY=your-brevo-api-key

# Swagger Configuration
L5_SWAGGER_BASE_PATH=/api
L5_SWAGGER_CONST_HOST=https://your-app.up.railway.app
L5_SWAGGER_GENERATE_ALWAYS=true
L5_SWAGGER_USE_ABSOLUTE_PATH=true
